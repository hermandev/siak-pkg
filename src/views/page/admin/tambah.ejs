<%- include('../../partials/header.ejs'); -%> 
<!-- Page Wrapper -->
<div id="wrapper">
  <%- include('../../partials/sidenav.ejs'); -%>

  <!-- Content Wrapper -->
  <div id="content-wrapper" class="d-flex flex-column">
    <!-- Main Content -->
    <div id="content">
      <%- include('../../partials/topbar.ejs'); -%>

      <!-- Begin Page Content -->
      <div class="container-fluid">
        <!-- DataTales Example -->
        <div class="card shadow mb-4">
          <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">Isi Data Sekolah</h6>
          </div>
          <form action="/daftar-sekolah/daftar" method="POST">
            <div class="card-body p-5">
              <div class="row">
                <div class="col-sm-6">
                  <div class="form-group">
                    <label for="npsn" class="col-form-label">NPSN</label>
                    <input type="text" class="form-control <%= messages.npsn ? "is-invalid":"" %>" id="npsn" name="npsn" value="<%= data.npsn %>"/>
                    <div class="invalid-feedback">
                        <% if(messages.npsn) { %>
                          <%= messages.npsn %>
                        <% } %>
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="nama" class="col-form-label">Nama Sekolah</label>
                    <input type="text" class="form-control <%= messages.nama ? "is-invalid":"" %>" id="nama" name="nama" value="<%= data.nama %>"/>
                    <div class="invalid-feedback">
                        <% if(messages.nama) { %>
                          <%= messages.nama %>
                        <% } %>
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="jenjang" class="col-form-label ">Jenjang Pendidikan</label>
                    <select class="form-control <%= messages.jenjang ? "is-invalid":"" %>" id="jenjang" name="jenjang" value="<%= data.jenjang %>">
                      <option value="0">-- Pilih Jenjang --</option>
                      <option value="TK" <%= data.jenjang === "TK"? "selected" :"" %>>TK</option>
                      <option value="SD" <%= data.jenjang === "SD"? "selected" :"" %>>SD</option>
                      <option value="SMP" <%= data.jenjang === "SMP"? "selected" :"" %>>SMP</option>
                      <option value="SMA" <%= data.jenjang === "SMA"? "selected" :"" %>>SMA</option>
                    </select>
                    <div class="invalid-feedback">
                        <% if(messages.jenjang) { %>
                          <%= messages.jenjang %>
                        <% } %>
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="status" class="col-form-label">Status</label>
                    <select class="form-control <%= messages.status ? "is-invalid":"" %>" id="status" name="status">
                      <option value="0">-- Pilih Status --</option>
                      <option value="Negeri" <%= data.status === "Negeri"? "selected" :"" %>>Negeri</option>
                      <option value="Swasta" <%= data.status === "Swasta"? "selected" :"" %>>Swasta</option>
                    </select>
                    <div class="invalid-feedback">
                        <% if(messages.status) { %>
                          <%= messages.status %>
                        <% } %>
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="telp" class="col-form-label">No. Telp/Fax</label>
                    <input type="text" class="form-control <%= messages.telp ? "is-invalid":"" %>" id="telp" name="telp" value="<%= data.telp %>" >
                    <div class="invalid-feedback">
                        <% if(messages.telp) { %>
                          <%= messages.telp %>
                        <% } %>
                    </div>
                  </div>
                </div>
                <div class="col-sm-6">
                  <div class="form-group">
                    <label for="provinsi" class="col-form-label">Provinsi</label>
                    <input type="text" class="form-control <%= messages.provinsi ? "is-invalid":"" %>" id="provinsi" name="provinsi" value="<%= data.provinsi %>">
                    <div class="invalid-feedback">
                        <% if(messages.provinsi) { %>
                          <%= messages.provinsi %>
                        <% } %>
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="kabupaten" class="col-form-label">Kabupaten</label>
                    <input type="text" class="form-control <%= messages.kabupaten ? "is-invalid":"" %>" id="kabupaten" name="kabupaten" value="<%= data.kabupaten %>">
                    <div class="invalid-feedback">
                        <% if(messages.kabupaten) { %>
                          <%= messages.kabupaten %>
                        <% } %>
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="kecamatan" class="col-form-label">Kecamatan</label>
                    <input type="text" class="form-control <%= messages.kecamatan ? "is-invalid":"" %>" id="kecamatan" name="kecamatan" value="<%= data.kecamatan %>">
                    <div class="invalid-feedback">
                        <% if(messages.kecamatan) { %>
                          <%= messages.kecamatan %>
                        <% } %>
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="desa" class="col-form-label">Desa/Keluranahan</label>
                    <input type="text" class="form-control <%= messages.desa ? "is-invalid":"" %>" id="desa" name="desa" value="<%= data.desa %>">
                    <div class="invalid-feedback">
                        <% if(messages.desa) { %>
                          <%= messages.desa %>
                        <% } %>
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="kode_post" class="col-form-label">Kode Post</label>
                    <input type="text" class="form-control <%= messages.kode_post ? "is-invalid":"" %>" id="kode_post" name="kode_pos" value="<%= data.kode_post %>">
                    <div class="invalid-feedback">
                        <% if(messages.kode_post) { %>
                          <%= messages.kode_post %>
                        <% } %>
                    </div>
                  </div>
                  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                </div>
              </div>
            </div>
            <div class="card-footer text-right pl-5 pr-5">
              <a href="/daftar-sekolah" class="btn btn-secondary">Batal</a>
              <button type="submit" class="btn btn-success">Daftar</button>
              
            </div>
          </form>
        </div>
      </div>
      <!-- /.container-fluid -->
    </div>
    <!-- End of Main Content -->

    <%- include('../../partials/footer.ejs', { modal: true,chart: false}); -%>
  </div>
</div>