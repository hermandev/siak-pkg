<%- include('../../partials/header.ejs'); -%>
<!-- Page Wrapper -->
<div id="wrapper">
    <%- include('../../partials/sidenav-operator.ejs'); -%>

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
            <%- include('../../partials/topbar.ejs'); -%>

            <!-- Begin Page Content -->
            <div class="container-fluid">
                <!-- DataTales Example -->
                <div class="card shadow mb-4">
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold text-primary">Isi Data Guru</h6>
                    </div>
                    <form action="/daftar-guru/daftar" method="POST">
                        <div class="card-body p-5">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="NIP" class="col-form-label">NIP</label>
                                        <input type="text" class="form-control <%= messages.nip ? "is-invalid":"" %>"
                                            id="nip" name="nip" value="<%= data.nip %>" />
                                        <div class="invalid-feedback">
                                            <% if(messages.nip) { %>
                                            <%= messages.nip %>
                                            <% } %>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="nama" class="col-form-label">Nama Lengkap</label>
                                        <input type="text" class="form-control <%= messages.nama ? "is-invalid":"" %>"
                                            id="nama" name="nama" value="<%= data.nama %>" />
                                        <div class="invalid-feedback">
                                            <% if(messages.nama) { %>
                                            <%= messages.nama %>
                                            <% } %>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="temp_lahir" class="col-form-label">Tempat Lahir</label>
                                        <input type="text" class="form-control <%= messages.temp_lahir ? "is-invalid":"" %>"
                                            id="temp_lahir" name="temp_lahir" value="<%= data.temp_lahir %>" />
                                        <div class="invalid-feedback">
                                            <% if(messages.temp_lahir) { %>
                                            <%= messages.temp_lahir %>
                                            <% } %>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="tgl_lahir" class="col-form-label">Tanggal Lahir</label>
                                        <input type="date" class="form-control <%= messages.tgl_lahir ? "is-invalid":"" %>"
                                            id="tgl_lahir" name="tgl_lahir" value="<%= data.tgl_lahir %>" />
                                        <div class="invalid-feedback">
                                            <% if(messages.tgl_lahir) { %>
                                            <%= messages.tgl_lahir %>
                                            <% } %>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="agama" class="col-form-label ">Agama</label>
                                        <select class="form-control <%= messages.agama ? "is-invalid":"" %>" id="agama" name="agama" value="<%= data.agama %>">
                                          <option value="0">-- Pilih agama --</option>
                                          <option value="Islam" <%= data.agama === "Islam"? "selected" :"" %>>Islam</option>
                                          <option value="Kristen" <%= data.agama === "Kristen"? "selected" :"" %>>Kristen</option>
                                          <option value="Hindu" <%= data.agama === "Hindu"? "selected" :"" %>>Hindu</option>
                                          <option value="Budha" <%= data.agama === "Budha"? "selected" :"" %>>Budha</option>
                                        </select>
                                        <div class="invalid-feedback">
                                            <% if(messages.agama) { %>
                                              <%= messages.agama %>
                                            <% } %>
                                        </div>
                                      </div>
                                    <div class="form-group">
                                        <label for="" class="col-form-label">Kelamin :</label>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="kelamin" id="laki-laki"
                                                value="laki-laki" checked>
                                            <label class="form-check-label" for="laki-laki">
                                                Laki-Laki
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="kelamin" id="perempuan"
                                                value="Perempuan">
                                            <label class="form-check-label" for="perempuan">
                                                Perempuan
                                            </label>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="no_telp" class="col-form-label">No Hp</label>
                                        <input type="text" class="form-control <%= messages.no_telp ? "is-invalid":"" %>"
                                            id="no_telp" name="no_telp" value="<%= data.no_telp %>" />
                                        <div class="invalid-feedback">
                                            <% if(messages.no_telp) { %>
                                            <%= messages.no_telp %>
                                            <% } %>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="alamat">Alamat</label>
                                        <textarea class="form-control <%= messages.alamat ? "is-invalid":"" %>" id="alamat" rows="3" name="alamat"></textarea>
                                        <div class="invalid-feedback">
                                            <% if(messages.alamat) { %>
                                            <%= messages.alamat %>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="pddk_terakhir" class="col-form-label">Pendidikan Terakhir</label>
                                        <input type="text" class="form-control <%= messages.pddk_terakhir ? "is-invalid":"" %>"
                                            id="pddk_terakhir" name="pddk_terakhir" value="<%= data.pddk_terakhir %>" />
                                        <div class="invalid-feedback">
                                            <% if(messages.pddk_terakhir) { %>
                                            <%= messages.pddk_terakhir %>
                                            <% } %>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="tmt_guru" class="col-form-label">TMT Guru</label>
                                        <input type="date" class="form-control <%= messages.tmt_guru ? "is-invalid":"" %>"
                                            id="tmt_guru" name="tmt_guru" value="<%= data.tmt_guru %>" />
                                        <div class="invalid-feedback">
                                            <% if(messages.tmt_guru) { %>
                                            <%= messages.tmt_guru %>
                                            <% } %>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="pangkat" class="col-form-label">Pangkat</label>
                                        <input type="text" class="form-control <%= messages.pangkat ? "is-invalid":"" %>"
                                            id="pangkat" name="pangkat" value="<%= data.pangkat %>" />
                                        <div class="invalid-feedback">
                                            <% if(messages.pangkat) { %>
                                            <%= messages.pangkat %>
                                            <% } %>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="jabatan" class="col-form-label">Jabatan</label>
                                        <input type="text" class="form-control <%= messages.jabatan ? "is-invalid":"" %>"
                                            id="jabatan" name="jabatan" value="<%= data.jabatan %>" />
                                        <div class="invalid-feedback">
                                            <% if(messages.jabatan) { %>
                                            <%= messages.jabatan %>
                                            <% } %>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="golongan" class="col-form-label">Golongan</label>
                                        <input type="text" class="form-control <%= messages.golongan ? "is-invalid":"" %>"
                                            id="golongan" name="golongan" value="<%= data.golongan %>" />
                                        <div class="invalid-feedback">
                                            <% if(messages.golongan) { %>
                                            <%= messages.golongan %>
                                            <% } %>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="tgs_tambahan" class="col-form-label">Tugas Tambahan</label>
                                        <input type="text" class="form-control <%= messages.tgs_tambahan ? "is-invalid":"" %>"
                                            id="tgs_tambahan" name="tgs_tambahan" value="<%= data.tgs_tambahan %>" />
                                        <div class="invalid-feedback">
                                            <% if(messages.tgs_tambahan) { %>
                                            <%= messages.tgs_tambahan %>
                                            <% } %>
                                        </div>
                                    </div>
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                </div>
                            </div>
                        </div>
                        <div class="card-footer text-right pl-5 pr-5">
                            <a href="/daftar-guru" class="btn btn-secondary">Batal</a>
                            <button type="submit" class="btn btn-success">Daftar</button>

                        </div>
                    </form>
                </div>
            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- End of Main Content -->

        <%- include('../../partials/footer.ejs', { modal: true,chart: false}); -%>
    </div>
</div>